{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "products",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "integer",
      "required": true
    },
    "comparePrice": {
      "type": "integer",
      "default": 0
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "collections": {
      "via": "products",
      "collection": "collections",
      "dominant": true
    },
    "isFeatured": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "sizes": {
      "type": "component",
      "repeatable": true,
      "component": "size.product-size"
    },
    "brand": {
      "model": "brand",
      "via": "products"
    }
  }
}
